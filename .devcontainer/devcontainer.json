{
    "image": "ghcr.io/mazhengcn/jax:0.3.21-py310-cu118",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {
            "username": "none"
        }
    },
    "remoteEnv": {
        "TZ": "Asia/Shanghai"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-python.isort"
            ]
        }
    },
    "postCreateCommand": "python -m pip install --no-cache-dir -e .",
    "runArgs": [
        "--name=deeprte",
        "--gpus=all",
        "--shm-size=1g"
    ],
    "mounts": [
        "source=rte_data,target=${containerWorkspaceFolder}/data,type=volume"
    ]
}