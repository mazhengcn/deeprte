{
    "name": "DeepRTE",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
        "args": {
            "UV_VERSION": "0.5.13",
            "DEBIAN_VERSION": "bookworm"
        }
    },
    "features": {
        "ghcr.io/dhoeric/features/hadolint:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.tensorboard",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "dummy",
        "PYTHONUNBUFFERED": "True",
        "UV_PREVIEW": "1",
        "UV_LINK_MODE": "copy"
    },
    "mounts": [
        {
            "type": "volume",
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data"
        }
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "postCreateCommand": "uv sync --dev",
    "postStartCommand": "uv run pre-commit install"
}
