{
    "name": "DeepRTE Dev Container",
    "image": "python:3.10-slim-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {},
        "ghcr.io/devcontainers/features/nvidia-cuda:1": {
            "installCudnn": true
        },
        "ghcr.io/mazhengcn/devcontainer-features/jax:1": {
            "jaxlibBackend": "cuda",
            "installNNlibs": false
        }
    },
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "ms-python.vscode-python",
                "ms-python.flake8",
                "ms-python.black-formatter"
            ]
        }
    },
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/rte_data",
            "type": "volume"
        },
        {
            "source": "vscode-python-extensions",
            "target": "/root/.vscode-server/extensions",
            "type": "volume"
        }
    ],
    "postCreateCommand": "python -m pip install -e ."
}