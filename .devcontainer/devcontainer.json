{
    "name": "DeepRTE",
    "image": "ghcr.io/zyresearch/devcontainers/jax:latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ]
        }
    },
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    "postCreateCommand": "pip install --user -e .[dev]"
}