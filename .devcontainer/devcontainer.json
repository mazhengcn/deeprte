{
    "name": "DeepRTE",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-python-envs@prerelease",
                "ms-toolsai.tensorboard",
                "ms-toolsai.jupyter",
                "astral-sh.ty@prerelease",
                "charliermarsh.ruff",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        },
        {
            "source": "${localWorkspaceFolderBasename}-venv",
            "target": "${containerWorkspaceFolder}/.venv",
            "type": "volume"
        },
        {
            "source": "uv-cache",
            "target": "/home/deeprte/.cache/uv",
            "type": "volume"
        }
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "postCreateCommand": {
        "fix-volume-permissions": "sudo chown $(whoami) .venv data $HOME/.cache/uv",
        "sync-environment": "uv sync --all-extras"
    },
    "postStartCommand": "uv run pre-commit install",
    "remoteUser": "deeprte"
}
