{
    "name": "deeprte",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
        "args": {
            "PYTHON_VERSION": "3.12"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.tensorboard",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "containerEnv": {
        "PYTHONUNBUFFERED": "True",
        "UV_LINK_MODE": "copy"
    },
    "mounts": [
        {
            "type": "volume",
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data"
        },
        {
            "type": "volume",
            "source": "rte_venv",
            "target": "${containerWorkspaceFolder}/.venv"
        }
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "postCreateCommand": "uv sync --frozen",
    "postStartCommand": "uv run pre-commit install",
    "remoteUser": "vscode"
}
