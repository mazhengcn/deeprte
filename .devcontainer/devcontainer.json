{
    "name": "DeepRTE",
    "image": "docker.io/python:3.10-slim",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": false,
            "username": "none"
        },
        "ghcr.io/devcontainers/features/nvidia-cuda:1": {
            "installCudnn": true
        },
        "ghcr.io/mazhengcn/features/jax:1": {
            "jaxlibBackend": "cuda"
        }
    },
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.vscode-python",
                "ms-python.flake8",
                "ms-python.black-formatter"
            ]
        }
    },
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/rte_data",
            "type": "volume"
        }
    ],
    "postCreateCommand": "python -m pip install -e ."
}