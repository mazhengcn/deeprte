{
    "name": "DeepRTE",
    // Use pre-built image or use the Dockerfile under .devcontainer folder
    "image": "ghcr.io/zyresearch/devcontainers/jax:latest",
    // Volume mount data folder
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    // Runtime arguments
    "runArgs": [
        "--name=deeprte",
        "--gpus=all",
        "--ipc=host"
    ],
    // Editable install of deeprte
    "postCreateCommand": "python -m pip install -e .",
    // Supporting tool 
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "ms-toolsai.jupyter"
            ]
        }
    },
    // Environment varibles for support tool
    "remoteEnv": {
        "TZ": "Asia/Shanghai"
    },
    "remoteUser": "root"
}