{
    "name": "deeprte",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
        "args": {
            "UV_VERSION": "latest",
            "DEBIAN_VERSION": "bookworm"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "ms-python.python",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one",
                "ms-toolsai.tensorboard",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "dummy",
        "PYTHONUNBUFFERED": "True",
        "UV_LINK_MODE": "copy"
    },
    "mounts": [
        {
            "type": "volume",
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data"
        },
        {
            "type": "volume",
            "source": "rte_venv",
            "target": "${containerWorkspaceFolder}/.venv"
        }
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "postCreateCommand": "sudo chown -R vscode:vscode ${containerWorkspaceFolder} && uv sync --frozen",
    "postStartCommand": "uv run pre-commit install",
    "remoteUser": "vscode"
}
