{
    "image": "ghcr.io/mazhengcn/jax:0.3.17-py310-cu117",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {
            "username": "none",
            "installZsh": true,
            "upgradePackages": true
        }
    },
    "remoteEnv": {
        "TZ": "Asia/Shanghai"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-python.isort"
            ]
        }
    },
    "postCreateCommand": "python -m pip install --no-cache-dir -e .",
    "runArgs": [
        "--name=deeprte_dev",
        "--gpus=all",
        "--shm-size=1g"
    ],
    "mounts": [
        "source=rte_data,target=${containerWorkspaceFolder}/data,type=volume"
    ]
}