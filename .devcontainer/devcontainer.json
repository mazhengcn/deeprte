{
    "image": "python:3.10-slim",
    "features": {
        "ghcr.io/devcontainers/features/nvidia-cuda:1": {
            "installCudnn": true
        },
        "ghcr.io/mazhengcn/devcontainer-features/jax:1": {
            "jaxlibBackend": "cuda",
            "installNNlibs": false
        },
        "ghcr.io/devcontainers/features/common-utils:1": {
            "username": "none"
        }
    },
    "runArgs": [
        "--name=deeprte",
        "--gpus=all",
        "--shm-size=1g"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "ms-python.vscode-python",
                "ms-python.vscode-pylance",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-python.isort"
            ]
        }
    },
    "mounts": [
        {
            "type": "volume",
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/rte_data"
        }
    ],
    "postCreateCommand": "python -m pip install --no-cache-dir -e ."
}