{
    "name": "DeepRTE",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.tensorboard",
                "charliermarsh.ruff"
            ]
        }
    },
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "mounts": [
        {
            "type": "volume",
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data"
        }
    ],
    "postCreateCommand": "uv sync --all-extras --dev"
}
