{
    "name": "deeprte",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.tensorboard",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolderBasename}-venv,target=${containerWorkspaceFolder}/.venv,type=volume",
        "source=rte_data,target=${containerWorkspaceFolder}/data,type=volume"
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "postCreateCommand": "sudo chown vscode .venv && uv sync --frozen",
    "postStartCommand": "uv run pre-commit install",
    "remoteUser": "vscode"
}
