{
    "name": "DeepRTE",
    // Use pre-built image or build from Dockerfile
    // "build": {
    //     "dockerfile": "Dockerfile"
    // },
    "image": "ghcr.io/mazhengcn/devcontainers/jax:latest",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true
        }
    },
    "runArgs": [
        "--name=deeprte",
        "--gpus=all",
        "--shm-size=1g"
    ],
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    "postCreateCommand": "pip install -e .",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/deeprteenv/bin/python"
            },
            "extensions": [
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "spmeesseman.vscode-taskexplorer"
            ]
        }
    },
    "remoteEnv": {
        "TZ": "Asia/Shanghai"
    },
    "remoteUser": "root"
}