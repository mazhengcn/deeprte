{
    "name": "DeepRTE Dev Container",
    "build": {
        "context": "./docker/",
        "dockerfile": "./docker/Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "configureZshAsDefaultShell": true,
            "upgradePackages": true,
            "username": "none"
        },
        "ghcr.io/mazhengcn/devcontainer-features/starship:1": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/deeprteenv/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "bungcip.better-toml",
                "aaron-bond.better-comments"
            ]
        }
    },
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/rte_data",
            "type": "volume"
        }
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=8gb"
    ],
    "postCreateCommand": "python -m pip install -e ."
}