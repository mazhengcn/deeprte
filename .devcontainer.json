{
    // Container name
    "name": "DeepRTE Dev Container",
    // Dockerfile to build the container
    "build": {
        "dockerfile": "./docker/Dockerfile"
    },
    // Features to install
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/mazhengcn/devcontainer-features/starship:1": {}
    },
    // Extensions to install and vscode settings to apply
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/deeprteenv/bin/python"
            },
            "extensions": [
                "aaron-bond.better-comments",
                "bungcip.better-toml",
                "GitHub.copilot",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    // Make sure the correct timezone is set
    "remoteEnv": {
        "TZ": "Asia/Shanghai"
    },
    // Mount the data folder
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    // Run arguments
    "runArgs": [
        "--name=deeprte",
        "--gpus=all",
        "--shm-size=8gb"
    ],
    // Command to run after the container is created
    "postCreateCommand": "python -m pip install -e '.[dev]'"
}
