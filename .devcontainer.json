{
    "name": "DeepRTE",
    "image": "ghcr.io/mazhengcn/jax:py311-cu118",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": false,
            "installOhMyZsh": false,
            "username": "none"
        },
        "ghcr.io/iterative/features/dvc:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "Iterative.dvc"
            ]
        }
    },
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/rte_data",
            "type": "volume"
        }
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "postCreateCommand": "pip install -e ."
}