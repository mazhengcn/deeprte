{
    "name": "MATLAB Dev Container",
    "image": "mathworks/matlab:latest",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true,
            "username": "none"
        }
    },
    "runArgs": [
        "--shm-size=512M"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "MathWorks.language-matlab"
            ]
        }
    },
    "remoteUser": "root"
}