{
    "name": "MATLAB",
    "image": "mathworks/matlab:latest",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true,
            "username": "none"
        }
    },
    "mounts": [
        {
            "source": "rte_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    "runArgs": [
        "--shm-size=512M"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "MathWorks.language-matlab"
            ]
        }
    },
    "remoteUser": "root"
}